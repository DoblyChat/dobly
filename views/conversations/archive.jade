#archive
	.search(data-bind="visible: navigation.showingArchive")
		input.field(type="text", name="topic-search", placeholder="Search topics", data-bind="value: app.topicSearch, valueUpdate: 'input'")
		.divide
	.content(data-bind="visible: navigation.showingArchive, foreach: archive.sortedCollaborationObjects")
		.convo(data-bind="visible: topicMatched")
			.header
				.info
					.topic
						span(data-bind="text: topic, click: $root.archive.open")
					.metadata
						span(data-bind="text: lastActivityMessage")
						span  Created by  
						span(data-bind="text: createdBy")
						span!= '.'
				.counter-container
					.counter(data-bind="visible: unreadCounter() > 0, text: unreadCounter")